<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.upadhyde.android.barcodescannerutil.common.CameraSourcePreview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.upadhyde.android.barcodescannerutil.common.GraphicOverlay
                android:id="@+id/barcodeOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.upadhyde.android.barcodescannerutil.common.CameraSourcePreview>

        <com.upadhyde.android.barcodescannerutil.OverlayView
            android:id="@+id/overlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </RelativeLayout>
</layout>
