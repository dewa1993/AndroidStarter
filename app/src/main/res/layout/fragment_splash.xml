<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:background="#5F7800"
      android:layout_height="match_parent">

      <ImageView
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          tools:src="@drawable/logo_syngenta"
          app:layout_constraintBottom_toTopOf="@+id/btn_permission"
          android:layout_width="0dp"
          android:layout_height="0dp" />


      <Button
          android:id="@+id/btn_permission"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:text="Choose File"
          android:layout_marginEnd="2dp"
          android:textColor="@android:color/white"
          android:background="@android:color/holo_green_light"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@id/btn_proceed"
          app:layout_constraintStart_toStartOf="parent" />

      <Button
          android:id="@+id/btn_proceed"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:text="Proceed"
          android:layout_marginStart="2dp"
          android:textColor="@android:color/white"
          android:background="@android:color/holo_green_light"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/btn_permission" />


  </android.support.constraint.ConstraintLayout>


</layout>